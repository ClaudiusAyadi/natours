header.header
	nav.nav.nav--tours
		form.nav__search(role="search")
			button.nav__search-btn(type='button' aria-label="Search button")
				svg
					use(xlink:href='/img/icons.svg#icon-search')
			label.assistive(for='search')
			input#search.nav__search-input(type='search', placeholder='Search tours')
	.header__logo
		a.nav__el(href='/')
			img(src='/img/logo-white.png', alt='Natours logo')
	nav.nav.nav--user
		a.nav__el(href='/') All tours
		if user
			a.nav__el.nav__el--logout Log out
			a.nav__el(href='/account')
				img.nav__user-img(
					src=`/img/users/${user.photo}`,
					alt=`${user.name}'s avatar`
				)
				span= user.name.split(' ')[0]
		else
			a.nav__el(href='/login') Log in
			a.nav__el.nav__el--cta(href='/signup') Sign up
